<div class="main-wrapper">
  <div class="app" id="app">
    <header class="header">
      <div class="header-block header-block-collapse d-lg-none d-xl-none">
        <button class="collapse-btn" id="sidebar-collapse-btn">
          <i class="fa fa-bars"></i>
        </button>
      </div>
      <div class="header-block header-block-search">
        <form role="search">
          <div class="input-container">
            <i class="fa fa-search"></i>
            <input type="search" placeholder="Search">
            <div class="underline"></div>
          </div>
        </form>
      </div>

      <div class="header-block header-block-nav">
        <ul class="nav-profile">
          <li class="notifications new">
            <a href="responsive-tables.html" data-toggle="dropdown">
              <i class="fa fa-bell-o"></i>
              <sup>
                  <span class="counter">8</span>
              </sup>
            </a>

            <div class="dropdown-menu notifications-dropdown-menu">
              <ul class="notifications-container">
                <li>
                  <a href="responsive-tables.html" class="notification-item">
                    <div class="img-col">
                      <div class="img" style="background-image: url('assets/faces/3.jpg')"></div>
                    </div>
                    <div class="body-col">
                      <p>
                        <span class="accent">Zack Alien</span> pushed new commit:
                        <span class="accent">Fix page load performance issue</span>. </p>
                    </div>
                  </a>
                </li>
              </ul>
              <footer>
                <ul>
                  <li>
                    <a href="responsive-tables.html"> View All </a>
                  </li>
                </ul>
              </footer>
            </div>

          </li>
          <li class="profile dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="responsive-tables.html#" role="button" aria-haspopup="true" aria-expanded="false">
              <div class="img" style="background-image: url('https://avatars3.githubusercontent.com/u/3959008?v=3&s=40')"> </div>
              <span class="name"> <%= current_user.name %></span>
            </a>
            <div class="dropdown-menu profile-dropdown-menu" aria-labelledby="dropdownMenu1">
              <%= link_to(edit_user_path(current_user), class: 'dropdown-item') do %>
                <i class="fa fa-user icon"></i> Profile
              <%end%>
              <a class="dropdown-item" href="responsive-tables.html#">
                                      <i class="fa fa-bell icon"></i> Notifications </a>
              <a class="dropdown-item" href="responsive-tables.html#">
                                      <i class="fa fa-gear icon"></i> Settings </a>
              <div class="dropdown-divider"></div>
              <%= link_to destroy_user_session_path, :method=>'delete' , class: 'dropdown-item' do %>
                <i class="fa fa-power-off icon"></i> Logout
              <% end %>
            </div>
          </li>
        </ul>
      </div>
    </header>

    <aside class="sidebar">
      <%= render 'layouts/navigation' %>
    </aside>

    <div class="sidebar-overlay" id="sidebar-overlay"></div>
    <div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle"></div>
    <div class="mobile-menu-handle"></div>

    <article class="content responsive-tables-page">
      <div class="title-block">
        <h1 class="title"> <%= content_for :body_title %> </h1>
        <p class="title-description"> <%= content_for :body_description %> </p>
      </div>

      <section class="section">
        <div class="row">
          <div class="col-md-12">
                  <%= render 'layouts/content' %>
          </div>
        </div>

      </section>

    </article>
    <footer class="footer">
      <div class="footer-block buttons">
        footer links here
      </div>
      <div class="footer-block author">
        <ul>
          <li> created by
            <a href="#">PIUBS Team</a>
          </li>
          <li>
            <a href="#">get in touch</a>
          </li>
        </ul>
      </div>
    </footer>
  </div>
</div>
