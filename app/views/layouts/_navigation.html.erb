<div class="sidebar-container">
  <div class="sidebar-header">
    <div class="brand">
      <h2 class="auth-title mt-2">
        <%= link_to image_tag("icons/logo.png", :alt => "Apoio à empresa") << ' PIUBS', calls_path, class: 'nav-item nav-link mylogo'%>
      </h2>
    </div>

    <nav class="menu">
      <ul class="sidebar-menu metismenu" id="sidebar-menu">
        <%= render 'layouts/sidebar_links_for_auth' %>
      </ul>
    </nav>
  </div>
  <footer class="sidebar-footer">
    <ul class="sidebar-menu metismenu" id="customize-menu">
      <li>
        <%= link_to (request.env['PATH_INFO'].split('/')[1] == 'controversias' ? apoio_root_path : controversias_root_path ) do %>
          <i class="fa fa-exchange icon"></i>
          Acessar <%= request.env['PATH_INFO'].split('/')[1] == 'controversias' ? 'Apoio a Empresas' : 'Controvérsias' %>

        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, :method=>'delete' do %>
          <i class="fa fa-power-off icon"></i>
          Sair
        <% end %>
      </li>
    </ul>
  </footer>
</div>
