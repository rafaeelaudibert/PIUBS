<%= render 'layouts/messages' %>
<div class="auth">
  <div class="auth-container">
    <div class="card">
      <header class="auth-header">
        <h1 class="auth-title">
          <%= image_tag("icons/logo.png", :alt => "Apoio à empresa") %>
          PIUBS
        </h1>
      </header>
      <div class="auth-content">
        <p class="text-center">LOGUE PARA CONTINUAR</p>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, :autofocus => true, placeholder: 'Insira seu email', class: 'form-control underlined' %>
        </div>

        <div class="form-group">
          <%= f.label :password, 'Senha' %>
          <%= f.password_field :password, placeholder: 'Insira sua senha' , class: 'form-control underlined' %>
        </div>

        <div class="form-group">
          <label for="remember">
            <input class="checkbox" id="remember" type="checkbox">
            <span>Lembrar-me</span>
          </label>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: 'forgot-btn pull-right' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Login', :class => 'btn btn-block btn-primary' %>
        </div>

        <div class="form-group">
          <p class="text-muted text-center">
            PIUBS - Apoio à empresas
          </p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center">
    <p class="btn btn-secondary btn-sm">
      <i class="fa fa-plus-square"></i>
      Copyright &copy; PIUBS AE - Version 0.1.0
    </p>
  </div>
</div>
</div>