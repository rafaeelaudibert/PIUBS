<%# Rails flash messages styled for Bootstrap 4.0 %>
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <script>
        const heart = "/assets/icons/logo-ffea90fdc94f5f4a6d88ec21782b2433fe67e0a8883a9950c468a55cf8d53e00.png";
        Notification.create("<%= name.to_s == 'notice' ? 'Sucesso' : 'Erro' %>", '<%= msg %>', heart, {in: "bounceIn", out: "fadeOutUpBig"}, 2, 5);
      </script>
    <% end %>
  <% end %>
