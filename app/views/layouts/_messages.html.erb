<%# Rails flash messages styled for Bootstrap 4.0 %>
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <script>
        const animation = {
          "in": "bounceIn",
          "out": "fadeOutUpBig"
        };
        const heart = "/assets/icons/heart-7b7db7682d22d7e720bd648d44141160ecebc8dace0e3d9f2effd12a41c7f6a9.png";
        Notification.create("<%= name.to_s == 'notice' ? 'Success' : 'Danger' %>", '<%= msg %>', heart, animation, 2, 5);
      </script>
    <% end %>
  <% end %>