<%= content_for :body_title do%>
<h4 class="display-5">Respostas</h4>
<%end%>
<div class="float-right" style="display: inline-block !important">
<form role="search">
  <div class="input-group" style="margin: 0">
    <input id="reply-form" class="form-control mr-sm-2" type="search" aria-label="Search">
    <label>
      <i class="fa fa-search"></i>
      &nbsp;Resposta
    </label>
    <button class="btn btn-primary my-2 my-sm-0" type="submit">Pesquisar</button>
  </div>
</form>
</div>
<hr class="under-header"/>

<% if @replies.length > 0 %>
<%= render './pagination', value: @replies %>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Protocolo</th>
      <th>Descrição</th>
      <th>Usuário</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.protocol %></td>
        <td><%= truncate strip_tags(reply.description), length: 40 %></td>
        <td><%= reply.user.name %></td>
        <td><%= link_to 'Mostrar', reply , class: 'btn btn-primary btn-sm'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render './pagination', value: @replies %>
<% end %>
<hr/>

<script>
$('document').ready(function () {

  $('#reply-form').on('focusout', function () {
    changeState($(this));
  });

  function changeState(form) {
    if (form.val().length > 0) {
      form.addClass('has-value');
    } else {
      form.removeClass('has-value');
    }
  }
});
</script>