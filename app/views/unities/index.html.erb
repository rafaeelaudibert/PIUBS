<%= content_for :body_title do%>
<h4 class="display-5">Unidades</h4>
<%end%>

<div class="float-right" style="display: inline-block !important">
<form role="search">
  <div class="input-group" style="margin: 0">
    <input id="unity-form" class="form-control mr-sm-2" type="search" aria-label="Search">
    <label>
      <i class="fa fa-search"></i>
      &nbsp;UBS
    </label>
    <button class="btn btn-primary my-2 my-sm-0" type="submit">Pesquisar</button>
  </div>
</form>
</div>
<div class="float-left create-new">
<%= link_to 'Criar nova UBS', new_unity_path, class: 'btn btn-primary' %>
</div>
<hr class="under-header"/>

<% if @unities.length > 0 %>
<%= render './pagination', value: @unities %>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>CNES</th>
      <th>Nome</th>
      <th>Cidade</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @unities.each do |unity| %>
      <tr>
        <td><%= unity.cnes %></td>
        <td><%= unity.name %></td>
        <td><%= unity.city.name %></td>
        <td>
          <%= link_to 'Mostrar', unity , class: 'btn btn-primary btn-sm'%>
          <%= link_to(unity, method: :delete, data: { confirm: 'Tens certeza?', verify: unity.cnes, verify_text: 'Caso tenha, por favor digite o número do CNES dessa UBS para continuar' }, class: 'btn btn-danger btn-sm') do %>
          <i class="fa fa-trash-o"></i>
        <%end%>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
<%= render './pagination', value: @unities %>
<% end %>
<hr/>

<script>
$('document').ready(function () {

$('#unity-form').on('focusout', function () {
  changeState($(this));
});

function changeState(form) {
  if (form.val().length > 0) {
    form.addClass('has-value');
  } else {
    form.removeClass('has-value');
  }
}
});
</script>