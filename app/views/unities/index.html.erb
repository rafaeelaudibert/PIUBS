<p id="notice"><%= notice %></p>
<%= content_for :body_title do%>
Unities
<%end%>
<div class="float-right">
<form class="form-inline">
  <input class="form-control mr-sm-2 ml-3" type="search" placeholder="CNES number" aria-label="Search">
  <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
</form>
</div>
<%= link_to 'Create new Unity', new_unity_path, class: 'btn btn-primary' %>
<hr/>
<%= render './pagination', value: @unities %>
<% if @unities.length > 0 %>
<hr/>
<table class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>CNES</th>
      <th>Name</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unities.each do |unity| %>
      <tr>
        <td><%= unity.cnes %></td>
        <td><%= unity.name %></td>
        <td><%= unity.city.name %></td>
        <td>
          <%= link_to 'Show', unity , class: 'btn btn-primary btn-sm'%>
          <%= link_to 'Edit', edit_unity_path(unity) , class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Destroy', unity, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr/>
<%= render './pagination', value: @unities %>
<% end %>
<hr/>
