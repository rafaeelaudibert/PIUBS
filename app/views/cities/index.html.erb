<%= content_for :body_title do%>Cidades<%end%>

<div class="float-right" style="display: inline-block !important">
<form role="search">
  <div class="input-group" style="margin: 0">
    <input id="city-form" class="form-control mr-sm-2" type="search" aria-label="Search">
    <label>
      <i class="fa fa-search"></i>
      &nbsp;Cidade
    </label>
    <button class="btn btn-primary my-2 my-sm-0" type="submit">Pesquisar</button>
  </div>
</form>
</div>
<div class="float-left" style="display: inline-block !important">
<%= render './pagination', value: @cities %>
</div>
<hr style="margin-top: 4em"/>

<% if @cities.length > 0 %>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th>Estado</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.state.name %></td>
        <td><%= link_to 'Mostrar', city , class: 'btn btn-primary btn-sm' %>
          <!-- <%= link_to 'Edit', edit_city_path(city), class: 'btn btn-primary btn-sm' %> <%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>-->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr/>
<div class="float-left" style="display: inline-block !important">
  <%= render './pagination', value: @cities %>
</div>
<% end %>

<script>
$('document').ready(function () {

  $('#city-form').on('focusout', function () {
    changeState($(this));
  });

  function changeState(form) {
    if (form.val().length > 0) {
      form.addClass('has-value');
    } else {
      form.removeClass('has-value');
    }
  }
});
</script>
