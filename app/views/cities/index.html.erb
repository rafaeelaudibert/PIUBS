<%= content_for :body_title do%>
<h4 class="display-5">Cidades</h4>
<%end%>

<div class="float-right" style="display: inline-block !important">
  <%= form_for_filterrific @filterrific do |f| %>
    <form role="search">
      <div class="input-group" style="margin: 0">
        <input name="filterrific[search_query]" id="filterrific_search_query" class="form-control mr-sm-2" type="search" aria-label="Search">
        <label>
          <i class="fa fa-search"></i>
          &nbsp;Cidade
        </label>
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Pesquisar</button>
      </div>
    </form>
  <%end%>
</div>
<div class="float-left create-new">
<%= link_to 'Adicionar nova cidade', new_city_path, class: 'btn btn-primary' %>
</div>
<hr class="under-header"/>

<div id="filterrific_results">

  <% if @cities.length > 0 %>
  <%= render './pagination', value: @cities %>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Nome</th>
        <th>Estado</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @cities.each do |city| %>
        <tr>
          <td><%= city.name %></td>
          <td><%= city.state.name %></td>
          <td><%= link_to 'Mostrar', city , class: 'btn btn-primary btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render './pagination', value: @cities %>
  <% end %>
</div>
<hr/>

<script>
$('document').ready(function () {

  $('#city-form').on('focusout', function () {
    changeState($(this));
  });

  function changeState(form) {
    if (form.val().length > 0) {
      form.addClass('has-value');
    } else {
      form.removeClass('has-value');
    }
  }
});
</script>
