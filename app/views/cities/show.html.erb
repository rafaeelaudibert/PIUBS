<p id="notice"><%= notice %></p>
<%= content_for :body_title do%>
<%= @city.name %>
<small class="text-muted">
  <%= @city.state.name %></small>
<%end%>

<h1 class="h3">Unidades Básicas de Saúde:</h1>
<br/><br/>

<% if @ubs.length > 0 %>
<table class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>CNES</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @ubs.each do |_ubs| %>
      <tr>
        <% unity = Unity.find(_ubs) %>
          <td><%= unity.cnes %></td>
          <td><%= unity.name %></td>
          <td><%= link_to 'Show', unity , class: 'btn btn-primary btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h1 class="h6">
    This city has no UBS in the database.
    <%= "You can insert one clicking in the button below" if current_user.try(:admin?) %>
  </h1>
<% end %>

<br>
<%= link_to 'Adicionar nova UBS', new_unity_path(city: @city.id), class: 'btn btn-primary btn-sm' if current_user.try(:admin?) %>
<%= link_to 'Adicionar Contrato', new_contract_path(city: @city.id), class: 'btn btn-primary btn-sm' if current_user.try(:admin?) && Contract.where('city_id = ?', @city.id).length==0 %>
<br/><br/>