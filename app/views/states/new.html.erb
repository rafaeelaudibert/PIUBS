<h1>Novo ESTADO</h1>

<div class="required_info"></div><br />

<%= form_with(model: @state, local: true) do |form| %>
<% if @state.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@state.errors.count, "error") %>
      prohibited this state from being saved:</h2>

    <ul>
      <% @state.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group">
  <%= form.label :name, 'Nome', class: 'required' %>
  <%= form.text_field :name, class: 'form-control', required: true %>
</div>

<div class="actions">
  <%= form.submit 'Salvar', :class => 'btn btn-primary btn-sm' %>
  <%= link_to 'Cancelar', @state, :class => 'btn btn-danger btn-sm' %>
</div>
<% end %>
