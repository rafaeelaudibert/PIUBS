<p id="notice"><%= notice %></p>
<%= content_for :body_title do%> States <%end%>
<form class="form-inline">
  <!-- <%= link_to 'Create new State', new_state_path , class: 'btn btn-success' %> -->
  <input class="form-control mr-sm-2" type="search" placeholder="State name" aria-label="Search">
  <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
</form>
<hr/>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @states %>
  </div>
  <%= will_paginate @states, :previous_label => '<<', :next_label => '>>' %>
</div>
<hr/>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= link_to 'Show', state , class: 'btn btn-primary btn-sm' %>
            <!-- <%= link_to 'Edit', edit_state_path(state) , class: 'btn btn-success btn-sm' %>
            <%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-sm' %>--></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr/>
<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @states %>
  </div>
  <%= will_paginate @states, :previous_label => '<<', :next_label => '>>' %>
</div>
<hr/>
