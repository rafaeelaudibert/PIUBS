<%= content_for :body_title do%>Estados<%end%>

<div class="float-right" style="display: inline-block !important">
<form role="search" class="form-inline">
  <div class="input-group" style="margin: 0">
    <input id="state-form" class="form-control mr-sm-2" type="search" aria-label="Pesquisar">
    <label>
      Estado
    </label>
    <button class="btn btn-success my-2 my-sm-0" type="submit">Pesquisar</button>
  </div>
</form>
</div>
<hr style="margin-top: 4em"/>

<% if @states.length > 0 %>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= link_to 'Mostrar', state , class: 'btn btn-success btn-sm' %>
          <%# link_to 'Edit', edit_state_path(state) , class: 'btn btn-success btn-sm' %>
            <%# link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <script>
    $('document').ready(function () {

      $('#state-form').on('focusout', function () {
        changeState($(this));
      });

      function changeState(form) {
        if (form.val().length > 0) {
          form.addClass('has-value');
        } else {
          form.removeClass('has-value');
        }
      }
    });
  </script>