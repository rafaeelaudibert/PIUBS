<%= content_for :body_title do%>
<h4 class="display-5"><%= "Company #{@company.sei}" %>
</h4>
<% end %>

<h1 class="h3">Usuários cadastrados:</h1>
<% if @users.length > 0 %>
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Nome do usuário</th>
      <th>E-mail</th>
      <th>CPF</th>
      <th>Ultimo login</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |_user| %>
      <tr>
        <% cpf = CPF.new(_user.cpf) %>
          <td><%= _user.name %></td>
          <td><%= _user.email %></td>
          <td><%= cpf.formatted %></td>
          <td><%= _user.last_sign_in_at ? _user.last_sign_in_at.strftime("%d %b %y - %H:%M:%S") : 'Nunca'%></td>
          <td><%= link_to 'Show', _user , class: 'btn btn-primary btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr/>
<% else %>
  <h1 class="h6">
    Essa empresa não possui contratos cadastrados no sistema.
    <%= "Você pode adicionar um clicando no botão abaixo." if current_user.try(:admin?) %>
    <br/><br/>
  </h1>
<% end %>

<h1 class="h3">Contratos:</h1>
<% if @contracts.length > 0 %>
  <%= render './pagination', value: @contracts %>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Nº do Contrato</th>
        <th>Nome da cidade</th>
        <th>Estado</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @contracts.each do |_contract| %>
        <tr>
          <% contract = Contract.find(_contract.id) %>
            <% city = City.find(contract.city_id) %>
              <% state = State.find(city.state_id) %>
                <td><%= contract.contract_number %></td>
                <td><%= city.name %></td>
                <td><%= state.name %></td>
                <td>
                  <% if contract.filename %>
                    <%= link_to "Clique para fazer download", download_contract_path(id: contract.id), class: 'btn btn-primary btn-sm' %>
                  <% else %>
                    <button class="btn btn-primary btn-sm" disabled="disabled">Não há arquivos anexados</button>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <hr/>
      <% else %>
        <h1 class="h6">
          Essa empresa não possui contratos cadastrados no sistema.
          <%= "Você pode adicionar um clicando no botão abaixo." if current_user.try(:admin?) %>
          <br/><br/>
        </h1>
      <% end %>

      <%= link_to 'Novo contrato', new_contract_path(company: @company.sei), class: 'btn btn-primary' if current_user.try(:admin?) %>
      <%= link_to 'Editar', edit_company_path(@company), class: 'btn btn-primary' %>
      <%= link_to 'Voltar', companies_path, class: 'btn btn-danger' %>
      <br/><br/>