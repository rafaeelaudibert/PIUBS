<%= content_for :body_title do%>
<div class='left'>
  <h4 class="display-5">Categorias</h4>
</div>
<div class="right create-new">
  <%= link_to 'Criar nova categoria', new_category_path, class: 'btn btn-primary btn-lg' %>
</div>
<%end%>

<div class="right" style="display: inline-block !important">
  <form role="search">
    <div class="right input-group" style="margin: 15px auto !important">
      <input name="filterrific[search_query]" id="filterrific_search_query" class="form-control mr-sm-2" type="search" aria-label="Search">
      <label>
        <i class="fa fa-search"></i>
        &nbsp;Pesquisar categoria
      </label>
      <button class="btn btn-primary my-2 my-sm-0" type="submit">Pesquisar</button>
    </div>
  </form>
</div>
<hr class="under-header" style="margin-top: <%= params[:filterrific] ? '8em' : '5em'%>"/>

<div id="filterrific_results">

  <% if @categories.length > 0 %>
  <%= render './pagination', value: @categories %>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Nome</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
            <%= link_to(category, method: :delete, data: { confirm: 'Tens certeza?'}, class: 'btn btn-danger btn-sm') do %>
            <i class="fa fa-trash-o"></i>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <%= render './pagination', value: @unities %>
  <% end %>
</div>
<hr/>

<script>
  $('document').ready(function () {

    $('#filterrific_search_query').on('focusout', function () {
      changeState($(this));
    });

    function changeState(form) {
      if (form.val().length > 0) {
        form.addClass('has-value');
      } else {
        form.removeClass('has-value');
      }
    }
  });
</script>
