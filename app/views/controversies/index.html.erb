<%= content_for :body_title do%>
  <div class="left">
    <h4 class="display-5">Controvérsias</h4>
  </div>
  <div class="right create-new">
  <%= link_to 'Adicionar nova controvérsia', new_controversy_path, class: 'btn btn-primary btn-lg' %>
  </div>
<%end%>

<div class="right" style="display: inline-block !important">

  <form role="search">
    <div class="right input-group" style="margin: 15px auto !important">
      <input name="filterrific[search_query]" id="filterrific_search_query" class="form-control mr-sm-2" type="search" aria-label="Search">
      <label>
        <i class="fa fa-search"></i>
        &nbsp;Pesquisar controvérsia
      </label>
      <button class="btn btn-primary my-2 my-sm-0" type="submit">Pesquisar</button>
    </div>
    <br>
    <p style="width: 100%; text-align: right;">
      <%= (link_to 'Desfazer pesquisa',
                   reset_filterrific_url,
                   class: 'btn btn-danger',
                   style: 'margin-top: 0.375em; border: 1px solid red;') if params[:filterrific] %>
    </p>
  </form>
</div>

<hr class="under-header" style="margin-top: <%= params[:filterrific] ? '8em' : '5em'%>"/>

<% if @controversies.length > 0 %>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Protocolo</th>
        <th>Título</th>
        <th>Empresa</th>
        <th>Cidade</th>
        <th>UBS</th>
        <th>Criador</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @controversies.each do |controversy| %>
        <% creator = "#{controversy.creator}_user_id" %>
        <tr>
          <td><%= controversy.protocol %></td>
          <td><%= controversy.title %></td>
          <td><%= controversy.sei %></td>
          <td><%= controversy.city.name %></td>
          <td><%= controversy.try(:unity).try(:name) || 'Nenhuma em específico' %></td>
          <td><%= User.find(controversy[creator]).name if controversy[creator] %></td>
          <td><%= link_to 'Mostrar', controversy, class: 'btn btn-sm btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
<h3>
  Não existe nenhuma controvérsia para a pesquisa realizada
</h3>
<% end %>
<hr/>


<script>
$('document').ready(function () {

  $('#filterrific_search_query').on('focusout', function () {
    changeState($(this));
  });

  function changeState(form) {
    if (form.val().length > 0) {
      form.addClass('has-value');
    } else {
      form.removeClass('has-value');
    }
  }
});
</script>
