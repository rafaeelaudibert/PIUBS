<%= content_for :body_title do%>
<h4 class="display-5">Anexos</h4>
<%end%>

<% if @attachments.length > 0 %>
  <%= render './pagination', value: @attachments, position: :top %>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Nome do arquivo</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @attachments.each do |attachment| %>
        <tr>
          <td><%= attachment.filename.capitalize %></td>
          <td><%= link_to "Download", download_attachments_path(attachment.id), class: 'btn btn-primary btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render './pagination', value: @attachments, position: :bottom %>
<% else %>
    <h4> Ainda não existem anexos no sistema! </h4>
<% end %>
<hr/>
