<%= content_for :body_title do%>
<div class="left">
  <h4 class="display-5">Pareceres</h4>
</div>
<%end%>

<% if @feedbacks.length > 0 %>
  <%= render './pagination', value: @feedbacks, position: :top %>
  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Descrição</th>
        <th>Protocolo</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @feedbacks.each do |feedback| %>
        <tr>
          <td><%= feedback.description %></td>
          <td><%= feedback.controversy_id %></td>
          <td><%= link_to 'Mostrar', feedback , class: 'btn btn-primary btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render './pagination', value: @feedbacks, position: :bottom %>
<% else %>
  <h3>
    Não existe nenhum feedback com a pesquisa realizada
  </h3>
<% end %>

<br>
