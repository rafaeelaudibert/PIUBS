<div class="auth">
  <div class="auth-container">
    <div class="card">
      <header class="auth-header">
        <h1 class="auth-title">
        <%= image_tag("icons/logo.png", :alt => "Apoio Ã  empresa") %>
          PIUBS </h1>
      </header>
      <%= render 'layouts/messages' %>
      <div class="auth-content">
        <p class="text-center">INFORME SEUS DADOS</p>
          <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :invitation_token, readonly: true %>
            <div class="form-group">
              <p><%= f.label "nome" %>
              <%= f.text_field :name, class: 'form-control', required: true %></p>
            </div>
            <div class="form-group">
              <p><%= f.label "CPF" %>
              <%= f.text_field :cpf, class: 'form-control', required: true %></p>
            </div>
            <div class="form-group">
              <% if f.object.class.require_password_on_accepting %>
              <p><%= f.label "Crie uma senha" %>
              <%= f.password_field :password, class: 'form-control' %></p>
            </div>
            <div class="form-group">
              <p><%= f.label "Confirme a sua senha" %>
              <%= f.password_field :password_confirmation, class: 'form-control' %></p>
              <% end %>
            </div>
              <p><%= f.submit "Confirmar", :class => 'btn btn-success' %></p>
          <% end %>
        </div>
      </div>
      <div class="text-center">
        <p class="btn btn-secondary btn-sm">
                        <i class="fa fa-plus-square"></i> Copyright &copy; PIUBS AE - Version 0.1.0 </p>
      </div>
    </div>
  </div>
