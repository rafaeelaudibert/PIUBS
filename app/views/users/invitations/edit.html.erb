<br><br><br>
<div class="authform" style="margin:0 auto; width:25%;">
  <h2>Bem-vindo ao PIUBS</h2></br>
  <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :invitation_token, readonly: true %>
    <div class="form-group">
      <p><%= f.label "nome" %>
      <%= f.text_field :name, class: 'form-control' %></p>
    </div>
    <div class="form-group">
      <p><%= f.label "CPF" %>
      <%= f.text_field :cpf, class: 'form-control' %></p>
    </div>
    <div class="form-group">
      <% if f.object.class.require_password_on_accepting %>
      <p><%= f.label "Crie uma senha" %>
      <%= f.password_field :password, class: 'form-control' %></p>
    </div>
    <div class="form-group">
      <p><%= f.label "Confirme a sua senha" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %></p>
      <% end %>
    </div>
      <p><%= f.submit "Confirmar", :class => 'button left' %></p>
  <% end %>
</div>
