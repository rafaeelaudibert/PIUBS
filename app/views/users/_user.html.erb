<td class="user">
  <% if (user.invitation_accepted_at != nil) %>
    <span class='user-name'><%= link_to user.name, user %></span>
    <span><%= mail_to user.email, 'Send e-mail', class: 'btn btn-primary' %></span>
  <% else %>
    <span class='user-name'></span>
  <% end %>
</td>
<td class="user">
  <%= user.email %>
</td>
<td class="user">
  <% if (user.current_sign_in_at) %>
    <%= user.current_sign_in_at.strftime('%d %b %y - %H:%M:%S') %>
  <% end %>
</td>
<td class="user user-status">
  <% if (user.invitation_accepted_at != nil) %>
    Cadastrado
  <% else %>
    Convidado
  <% end %>
</td>
<td class='user user-role'>
  <% if (user.invitation_accepted_at != nil) %>
    <% $trash_label = "Apagar usuário" %>
  <% else %>
    <% $trash_label = "Cancelar convite" %>
  <% end %>
  <%= link_to $trash_label, user_path(user), data: { confirm: 'Tens certeza?', verify: user.email, verify_text: 'Caso tenha, por favor digite o endereço de e-mail desse usuário para continuar' }, :method => :delete, :class => 'btn btn-danger
  button-xs' unless user == current_user || user.role == "admin" %>
</td>
